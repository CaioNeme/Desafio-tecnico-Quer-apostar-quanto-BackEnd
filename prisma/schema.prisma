// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definição do modelo para o participante
model Participant {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  balance   Int // O saldo é representado em centavos, como um número inteiro
  Bet       Bet[]
}

// Definição do modelo para o jogo
model Game {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  homeTeamName  String
  awayTeamName  String
  homeTeamScore Int
  awayTeamScore Int
  isFinished    Boolean
  Bet           Bet[]
}

// Definição do modelo para a aposta
model Bet {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  homeTeamScore Int
  awayTeamScore Int
  amountBet     Int // O valor da aposta é representado em centavos, como um número inteiro
  gameId        Int
  participantId Int
  status        String // PENDING, WON, or LOST
  amountWon     Int? // Pode ser null se a aposta estiver pendente
  game          Game        @relation(fields: [gameId], references: [id])
  participant   Participant @relation(fields: [participantId], references: [id])
}
